<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <servlet>
    <servlet-name>csvservice</servlet-name>
    <servlet-class>org.thechiselgroup.chooselexample.server.CSVFileServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>csvservice</servlet-name>
    <url-pattern>/org_thechiselgroup_chooselexample/csvservice</url-pattern>
  </servlet-mapping>

  <!-- CHOOSEL framework servlets & configuration -->

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>authentication</servlet-name>
    <servlet-class>org.thechiselgroup.choosel.server.authentication.AuthenticationServiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>authentication</servlet-name>
    <url-pattern>/org_thechiselgroup_chooselexample/authentication</url-pattern>
  </servlet-mapping>  

  <servlet>
    <servlet-name>feedback</servlet-name>
    <servlet-class>org.thechiselgroup.choosel.server.feedback.FeedbackServiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>feedback</servlet-name>
    <url-pattern>/org_thechiselgroup_chooselexample/feedback</url-pattern>
  </servlet-mapping>  

  <servlet>
    <servlet-name>workspace</servlet-name>
    <servlet-class>org.thechiselgroup.choosel.server.workspace.WorkspacePersistenceServiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>workspace</servlet-name>
    <url-pattern>/org_thechiselgroup_chooselexample/workspace</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>workspace-sharing</servlet-name>
    <servlet-class>org.thechiselgroup.choosel.server.workspace.WorkspaceSharingServiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>workspace-sharing</servlet-name>
    <url-pattern>/org_thechiselgroup_chooselexample/workspace-sharing</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>acceptInvitation</servlet-name>
    <servlet-class>org.thechiselgroup.choosel.server.workspace.AcceptInvitationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>acceptInvitation</servlet-name>
    <url-pattern>/acceptInvitation</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>view</servlet-name>
    <servlet-class>org.thechiselgroup.choosel.server.workspace.ViewPersistenceServiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>view</servlet-name>
    <url-pattern>/org_thechiselgroup_chooselexample/view</url-pattern>
  </servlet-mapping>

<!-- gwt-log remote logging service -->  
<servlet>
  <servlet-name>remoteLoggerServiceImpl</servlet-name>
  <servlet-class>com.allen_sauer.gwt.log.server.RemoteLoggerServiceImpl</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>remoteLoggerServiceImpl</servlet-name>
  <url-pattern>/org_thechiselgroup_chooselexample/gwt-log</url-pattern>
</servlet-mapping>
 
</web-app>
