<!--
Exports class path with id "org.thechiselgroup.choosel.core.path". Requires 'root.dir' variable
that points to directory that contains org.thechiselgroup.choosel.core.path.
-->
<project name="org.thechiselgroup.choosel.core-classpath">
	<path id="org.thechiselgroup.choosel.core-classpath">
		<pathelement location="${root.dir}/org.thechiselgroup.choosel.core/src" />
		<pathelement location="${root.dir}/org.thechiselgroup.choosel.core/war/WEB-INF/classes" />
		<fileset dir="${root.dir}/org.thechiselgroup.choosel.core">
			<include name="lib/*.jar" />
		</fileset>
	</path>
</project>